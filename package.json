{
  "name": "@vlindersoftware/generate-licenses",
  "version": "1.0.0",
  "description": "GitHub Action for generating comprehensive open source license reports from npm dependencies",
  "main": "action.yml",
  "bin": {
    "generate-licenses-csv": "./scripts/generate-licenses-csv.cjs",
    "download-licenses": "./scripts/download-licenses.cjs",
    "generate-licenses-html": "./scripts/generate-licenses-html.py"
  },
  "files": [
    "scripts/",
    "templates/",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch --testPathIgnorePatterns=integration",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=integration",
    "licenses:csv": "node scripts/generate-licenses-csv.cjs",
    "licenses:download": "node scripts/download-licenses.cjs",
    "licenses:html": "python3 scripts/generate-licenses-html.py",
    "licenses:generate": "npm run licenses:csv && npm run licenses:download && npm run licenses:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VlinderSoftware/generate-licenses.git"
  },
  "keywords": [
    "github-action",
    "licenses",
    "npm",
    "dependencies",
    "compliance",
    "open-source"
  ],
  "author": "VlinderSoftware",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VlinderSoftware/generate-licenses/issues"
  },
  "homepage": "https://github.com/VlinderSoftware/generate-licenses#readme",
  "devDependencies": {
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}